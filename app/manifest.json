{
  "manifest_version": 2,
  "name": "DIM",
  "short_name": "DIM",
  "version": "4.0.0.1",
  "description": "DIM is a robust item manager to view, move, and equip armor, weapons, and items in Destiny.",
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "author": "The Team at DIM",
  "short_name": "DIM",
  "background": {
    "scripts": [
      "chrome-ext-scripts/scripts.js"
    ]
  },
  "permissions": [
    "*://*.bungie.net/*",
    "cookies",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "16x16.png",
      "38": "32x32.png"
    }
  },
  "options_page": "index.html",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "incognito": "split",
  "offline_enabled": false
}
